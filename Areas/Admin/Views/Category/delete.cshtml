@model Category

<form method="post">
        <input asp-for="CategoryId" hidden />
    <div class="border p-3 m-auto w-50">
        <h4 class="text-center">Delete Category</h4>
        <hr />
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="Name" disabled class="form-control " />
        </div>
        <label asp-for="DisplayOrder" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="DisplayOrder" disabled type="number" class="form-control " />
        </div>
        <div class="form-group row">
            <div class="text-end">
                <button type="submit" class="btn btn-danger" style="max-width:150px">Delete category</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border">Go Back</a>
            </div>
        </div>
    </div>
</form>
