@model dotnetshop.ViewModels.ProductVM

<form method="post">
    <div class="border p-3 m-auto w-50">
        <h4 class="text-center">New Product</h4>
        <hr />
        <label asp-for="Product.Title" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="Product.Title" class="form-control " />
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>
        <label asp-for="Product.Description" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <textarea asp-for="Product.Description" class="form-control "></textarea>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <label asp-for="Product.ISBN" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="Product.ISBN" class="form-control " />
            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
        </div>
        <label asp-for="Product.Author" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="Product.Author" class="form-control " />
            <span asp-validation-for="Product.Author" class="text-danger"></span>
        </div>
        <label asp-for="Product.ListPrice" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="Product.ListPrice" type="number" class="form-control " />
            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
        </div>
        <label asp-for="Product.Price" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="Product.Price" type="number" class="form-control " />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <label asp-for="Product.Price50" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="Product.Price50" type="number" class="form-control " />
            <span asp-validation-for="Product.Price50" class="text-danger"></span>
        </div>
        <label asp-for="Product.Price100" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="Product.Price100" type="number" class="form-control " />
            <span asp-validation-for="Product.Price100" class="text-danger"></span>
        </div>
        <label asp-for="Product.CategoryId" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                <option disabled selected >Select category</option>
            </select>
            <span asp-validation-for="Product.Category" class="text-danger"></span>
        </div>
        <label asp-for="Product.ImageUrl" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="Product.ImageUrl" class="form-control " />
            <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="text-end">
                <button type="submit" class="btn btn-primary" style="max-width:150px">Add new product</button>
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border">Go Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
