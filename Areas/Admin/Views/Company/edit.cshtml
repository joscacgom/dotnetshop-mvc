@model dotnetshop.Models.Company

<form method="post">
    <input asp-for="@Model.CompanyId" hidden />
    <div class="border p-3 m-auto w-50">
        <h4 class="text-center">Edit Company</h4>
        <hr />
        <label asp-for="@Model.Name" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="@Model.Name" class="form-control " />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <label asp-for="@Model.Address" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="@Model.Address" class="form-control " />
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>
        <label asp-for="@Model.City" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="@Model.City" class="form-control " />
            <span asp-validation-for="@Model.City" class="text-danger"></span>
        </div>
        <label asp-for="@Model.State" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="@Model.State" class="form-control " />
            <span asp-validation-for="@Model.State" class="text-danger"></span>
        </div>
        <label asp-for="@Model.PostalCode" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="@Model.PostalCode" class="form-control " />
            <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
        </div>
        <label asp-for="@Model.PhoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="row pb-2">
            <input asp-for="@Model.PhoneNumber" class="form-control " />
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="text-end">
                <button type="submit" class="btn btn-primary" style="max-width:150px">Update product</button>
                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary border">Go Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
